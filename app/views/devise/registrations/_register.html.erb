  <h3>Register</h3>

  <%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.inputs do %>
      <%= f.input :username %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <% end %>
    <%= f.buttons do %>
      <%= f.commit_button "Create Account" %>
    <% end %>
  <% end %>

  <%= render "links" %>

