  <h3>Voter Registration</h3>

  <%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.inputs :for => :registration do |registration_form| %>
      <% if @forward_url.present? %>
        <input type="hidden" name="forward_url" type="hidden" value="<%= @forward_url %>" />
      <% end %>

      <%= registration_form.input :state_id, :label => "State", :as => :select, :collection => @states %>
      <%= registration_form.input :fullname, :label => "Full Name" %>
      <%= registration_form.input :street_address %>
      <%= registration_form.input :postal_code %>
      <%= registration_form.input :ssn, :type => :password, :label => "SSN last four digits" %>
      <%= registration_form.input :country_code, :as => :select, :collection => @countries, :label => "Country" %>
    <% end %>

    <%= f.inputs do %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <% end %>
    <%= f.buttons do %>
      <%= f.commit_button "Submit Voter Registration" %>
    <% end %>
  <% end %>

  <%= render "links" %>

