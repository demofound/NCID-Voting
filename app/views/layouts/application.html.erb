<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render :partial => "shared/html_head" %>
  </head>
  <body>
    <%= render :partial => "shared/top_menu" %>
    <div class="container">
      <div class="content">
        <% if flash.keys.any? %>
          <% flash.each do |type, message| %>
            <%= content_tag :div, message, :class => "flash flash_#{type}" %>
          <% end %>
        <% end %>

        <% content_body = yield; side_column = content_for(:side_column) %>
        <% if side_column.present? %>

        <div class="row">
          <div class="span9">
            <%= content_body %>
          </div>
          <div class="span1">&nbsp;</div>
            <div class="span3">
              <div class="well sidebar-nav">
                <%= side_column %>
              </div>
            </div>
          </div>
        </div>

        <% else %>
        <%= content_body %>
        <% end %>

      </div>
      <%= render :partial => "shared/footer" %>
    </div>
    <%= javascript_include_tag "application" %>
  </body>
</html>
