<ul class="testimonials unstyled">
    <% testimonials.each do |t|%>
        <li class="testimonial">
            <%= image_tag(t[:user][:avatar], :class => "userpic") %>
            <pre class="body">
                <%= t[:body] %>
            </pre>
            <span class="fullname"><%= t[:user][:fullname] %></span>
        </li>
    <% end %>
</ul>
